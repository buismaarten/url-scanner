{
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.8",
        "league/uri": "^7.3",
        "league/uri-interfaces": "^7.3",
        "symfony/dom-crawler": "^7.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Buismaarten\\UrlScanner\\": "src/"
        }
    },
    "scripts": {
        "analyse": "./vendor/bin/phpstan analyse src --level=9",
        "test": "./vendor/bin/phpunit tests --colors=always"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
